            android:layout_margin="1dp"
            android:gravity="center"
            android:text="10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="11"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="12"/>
    </TableRow>

</TableLayout>